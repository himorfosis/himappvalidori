<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.himorfosis.validori.HasilValidasi">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >

                    <ImageView
                        android:id="@+id/brand"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bintang"
                        android:layout_gravity="left"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,5"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bgGambar"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/gambarProduk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        card_view:cardBackgroundColor="@color/putih">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/gambarValidasi"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    />

                                <TextView
                                    android:id="@+id/textValidasi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/hitam"
                                    android:layout_marginLeft="18dp"
                                    android:textStyle="bold"
                                    android:textSize="20dp"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/abu">

                            </View>


                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/produkNama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:maxLines="2"
                                android:textColor="@color/hitam"
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:layout_marginTop="10dp"
                                autofit:minTextSize="10dp"
                                android:text="NamaProduk"
                                android:layout_marginBottom="10dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:id="@+id/txtkadaluarsa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Baik digunakan sebelum"
                                android:textSize="16dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/hitam"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:id="@+id/kadaluarsa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textColor="@color/hitam"
                                android:layout_marginBottom="10dp"
                                />

                            <TextView
                                android:id="@+id/txtkomposisi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Komposisi"
                                android:textSize="16dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/hitam"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:id="@+id/komposisi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textColor="@color/hitam"
                                android:layout_marginBottom="10dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:id="@+id/txtberatbersih"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Berat bersih"
                                android:textSize="16dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/hitam"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:id="@+id/beratbersih"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textColor="@color/hitam"
                                android:layout_marginBottom="10dp"
                                />

                            <TextView
                                android:id="@+id/txtdiproduksi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Diproduksi / import"
                                android:textSize="16dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/hitam"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:id="@+id/diproduksi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textColor="@color/hitam"
                                android:layout_marginBottom="10dp"
                                />

                            <TextView
                                android:id="@+id/txtsertifikasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sertifikasi"
                                android:textSize="16dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/hitam"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:id="@+id/sertifikasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textColor="@color/hitam"
                                android:layout_marginBottom="10dp"
                                />

                            <TextView
                                android:id="@+id/lihatsertifikat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="@color/blue"
                                android:text="Lihat Sertifikat"/>

                            <TextView
                                android:id="@+id/txtanjuran"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Anjuran"
                                android:textSize="16dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/hitam"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:id="@+id/anjuran"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textColor="@color/hitam"
                                android:layout_marginBottom="10dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/kritik"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp"
                                    android:text="Kritik"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:textColor="@color/putih"
                                    android:background="@drawable/btncirclegold"
                                    android:visibility="visible"
                                    />

                                <Button
                                    android:id="@+id/laporkan"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp"
                                    android:text="Laporkan"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:textColor="@color/putih"
                                    android:background="@drawable/btnmerah"
                                    android:visibility="visible"

                                    />

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
